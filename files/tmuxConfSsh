set -g mouse on
set-option -g set-clipboard on
setw -g mode-keys vi

bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "xclip -selection clipboard -i"

bind -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "xclip -selection clipboard -i"

# Prefix key (default Ctrl-b)
set-option -g prefix C-Space
unbind-key C-b

# Pane splitting shortcuts (no prefix)
bind -n M-q split-window -v
bind -n M-w split-window -h

# Window management shortcuts (no prefix)
bind -n C-n new-window
bind -n C-p next-window
bind -n C-o previous-window

#Status position at the top
set -g status-position top

# History scrollback buffer
set -g history-limit 100000

# Status message display time (ms)
set -g display-time 4000

# Status bar refresh interval (seconds)
set -g status-interval 1

# Reload config with prefix + r
bind-key r source-file ~/.tmux.conf \; display-message "~/.tmux.conf reloaded."

# Remove delay for key sequences (makes combos more responsive)
set -s escape-time 0

# Aggressively resize panes/windows on terminal resize
setw -g aggressive-resize on

# Plugins via TPM
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-logging'

# Nord theme
set -g @plugin "arcticicestudio/nord-tmux"

# Initialize TPM (must be at the very end of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
